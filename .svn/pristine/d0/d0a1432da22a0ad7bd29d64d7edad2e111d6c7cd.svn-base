	        logger.info("昵称"+nickname);
	        logger.info("城市"+city);
	        logger.info("省"+province);
	        logger.info("国家"+country);
	        logger.info("头像"+headimgurl);
	        logger.info("性别"+sex);
	        logger.info(userInfo);
	        response.sendRedirect("https://iots.shingsou.com/wxpay/jsapiPay.html?openId="+openId);
	        logger.info("wxpay wxOpenId  end");
	    }
	
