                	  ownerPlace:$.trim($("#ownerPlace").combobox('getValue')),
                	  ownerId:$.trim($("#ownerId").combobox('getValue')),
                	  accessNum:$.trim($("#accessNum").val()),
                	  agency:$.trim($("#agency").combobox('getValue')),
                	  startDDate:$.trim($("#startDDate").datebox("getValue")),
                	  endDDate:$.trim($("#endDDate").datebox("getValue")),
                	  startWDate:$.trim($("#startWDate").datebox("getValue")),
                	  endWDate:$.trim($("#endWDate").datebox("getValue")),
                	  startWDate:$.trim($("#startRWDate").datebox("getValue")),
                	  endWDate:$.trim($("#endRWDate").datebox("getValue"))
                  })
        },
