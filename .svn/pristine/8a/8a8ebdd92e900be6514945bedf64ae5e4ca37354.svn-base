<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ include file="../../base.jsp"%>
<!DOCTYPE html>
<head>
    <meta charset="UTF-8">
    <title>充值套餐</title>
    <link type="text/css" rel="stylesheet" href="<%=request.getContextPath()%>/css/main.css">
</head>
<body>
<div class="easyui-layout" data-options="fit:true" id="useBox">
    <div data-options="region:'center',split:true">
        <!--表格查询-->
        <div class="tableFind">
             <p>
	            <label>代理账号;</label><input style="width:8%;" type="text"/>
	             <label>运营商;</label>
	                                  <select class="easyui-combobox">
	                                        <option>请选择</oprtion>
	                                        <option>移动</oprtion>
	                                        <option>联通</oprtion>
	                                        <option>电信</oprtion>
	                                  </select>
	            <label>有效期;</label>
	                                  <select class="easyui-combobox">
	                                        <option>请选择</oprtion>
	                                        <option>月清零</oprtion>
	                                        <option>半年清零</oprtion>
	                                        <option>年清零</oprtion>
	                                  </select>                      
	            <a id="btn" href="javascript:" class="easyui-linkbutton tableFindBut" data-options="iconCls:'icon-search'" onclick="obj.find()">查询</a>
	            <a id="zhbtn" href="javascript:" class="easyui-linkbutton tableFindBut" data-options="iconCls:'icon-redo'" onclick="obj.find()">重置</a>
	            
            </p>
        </div>
        <!--表格列表-->
        <div class="tableCon">
            <table id="table" class="tableStyle"></table>
            <div id="tabelBut">
                <div>
                    <a href="#" class="easyui-linkbutton" plain="true"  onclick="obj.addBox()">新增套餐</a>
                    <a href="#" class="easyui-linkbutton" plain="true"  onclick="obj.edit()">编辑套餐</a>
                    <a href="#" class="easyui-linkbutton" plain="true"  >上架/下架</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!--//新增弹出框-->
<div id="addBox" >
    <form id="addForm" method="post">
    
        <div class="formDiv"><label>流量(MB):</label><input type="text"/></div>
        <div class="formDiv"><label>排序:</label><input type="text"/></div>
        <div class="formDiv"><label>售价:</label><input type="text"/></div>
        <div class="formDiv"><label>原价:</label><input type="text"/></div>
        <div class="formDiv"><label>套餐描述:</label><input style="width:80%;height:160px;" class="easyui-textbox" name="message" data-options="multiline:true"></input></div>
        <ul class="easyui-tree"  data-options="animate:true,checkbox:true">
					<li>
						<span>联通</span>
						<ul>
							<li>月清零</li>
							<li>半年清零</li>
							<li>年清零</li>
						</ul>
					</li>
					
					<li>
						<span>移动</span>
						<ul>
							<li>月清零</li>
							<li>半年清零</li>
							<li>年清零</li>
						</ul>
					</li>
					
					<li>
						<span>电信</span>
						<ul>
							<li>月清零</li>
							<li>半年清零</li>
							<li>年清零</li>
						</ul>
					</li>
		</ul>
        <div class="formDiv"><label>代理提成:</label><input type="text"/></div>
        <div class="forSubmint">
            <a href="#" class="easyui-linkbutton"  iconCls="icon-ok"  onclick="obj.sum()">保存</a>
            <a href="#" class="easyui-linkbutton"  iconCls="icon-ok"  onclick="obj.sum()">取消</a>
        </div>
    </form>
</div>
<script type="text/javascript">
var bathPath="<%=basePath%>";
</script>
<script src=payPackages.js></script>


</body>
</html>